{
	"name": "kellyapps-monorepo",
	"private": true,
	"version": "0.2.0",
	"packageManager": "pnpm@10.15.1",
	"workspaces": ["apps/*", "packages/*"],
	"scripts": {
		"build": "pnpm -r run build",
		"dev": "concurrently -n web,mobile -c blue,green \"pnpm --filter @fincy/web dev\" \"pnpm --filter @fincy/mobile start\"",
		"dev:all": "pnpm -r --parallel run dev",
		"lint": "biome format . --write && biome check . --write",
		"test": "pnpm -r run test",
		"prepare": "lefthook install"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.7.0",
		"concurrently": "^9.0.1",
		"lefthook": "^1.7.0",
		"tsx": "^4.16.2"
	},
	"overrides": {
		"react": "19.0.0",
		"react-dom": "19.0.0"
	}
}
